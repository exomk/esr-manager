<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.1">

    <persistence-unit name="registrationPU">
        <jta-data-source>java:jboss/datasources/PostgresDS</jta-data-source>
        <class>com.exo.registrator.entity.DeviceEntity</class>
        <class>com.exo.registrator.entity.UserEntity</class>
        <class>com.exo.registrator.entity.WorkLogEntity</class>


        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
            <property name="show_sql" value="true"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/registrator"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username"/>
            <property name="hibernate.connection.password"/>
        </properties>
    </persistence-unit>
</persistence>
